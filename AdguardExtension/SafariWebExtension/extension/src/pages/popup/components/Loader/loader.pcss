.loader {
    position: fixed;
    z-index: 10;
    left: 0;
    top: 0;
    padding: 12px 16px;
    width: 100%;
    height: 100%;
    background-color: var(--white);

    &__inner {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    &__item {
        width: 100%;
        border-radius: 8px;
        height: 42px;
        margin: 6px 0;
        background-color: var(--gray100);
    }
}
