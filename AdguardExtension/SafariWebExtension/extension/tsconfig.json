{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "jsx": "react",
    "resolveJsonModule": true,
    "moduleResolution": "node",
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
